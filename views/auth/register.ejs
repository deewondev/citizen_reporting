<div class="register-container">
    <% if (success !== '') { %>
        <div class="custom-alert ca-success" id="myAlert">
            <span class="close-btn close-success" onclick="closeAlert('successAlert')">×</span>
            <p><%= success %></p>
        </div>
    <% } %>
    
    <% if (danger !== '') { %>
        <div class="custom-alert ca-danger" id="myAlert">
            <span class="close-btn close-danger" onclick="closeAlert('dangerAlert')">×</span>
            <p><%= danger %></p>
        </div>
    <% } %>

    <h3>Register</h3>
    
    <form id="register-form" action="/register" method="POST">
        <input type="text" id="regUsernameInput" name="username" placeholder="Username" onblur="userValidation()" autocomplete="off" required>
        <input type="password" id="regPasswordInput" name="password" placeholder="Password" onblur="userValidation()" autocomplete="off" required>
        <input type="submit" value="Register" class="btn-register">
        <p>Already a member? <a href="/login">Login</a></p>
    </form>
</div>
