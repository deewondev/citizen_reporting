<div class="single-post">
    <div class="single-post-content">
        
        <img loading="lazy" src="https://images.pexels.com/photos/923681/pexels-photo-923681.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="image slider">
        
        <h2> <%= data.title %> </h2>
        
        <p> <%= data.description %> </p>

        <div class="post-footer">
            <span class="tag-single"> <%= data.category %> </span>
            <span> <%= getTimeDifference(data.createdAt) %> </span>
        </div>
    </div>

    <div class="related-post">
        <h4>Related Posts</h4>
        <ul>
            <% if (relatedPosts && relatedPosts.length > 0) { %>
                <% relatedPosts.forEach(post => { %>
                    <li> <a href="/post/<%= post._id %>"><%= post.title %></a> </li>
                <% }) %>
            <% } else if (relatedPosts) { %>
                <li> <a href="/post/<%= post._id %>"><%= relatedPosts.title %></a> </li>
            <% } else { %>
                <li> No Post Found </li>
            <% } %>
        </ul>
    </div>
</div>
